@model IEnumerable<PBX.Models.Kategoria>
@using PBX.Models
@{
    ViewBag.Title = "Strona Główna";
}

@if ((ViewBag.user as PBX.Models.Uzytkownik) != null && (ViewBag.user as PBX.Models.Uzytkownik).id >= 0)
    {
        <h2 class="text-center">@((ViewBag.user as PBX.Models.Uzytkownik).imie), witamy na Stronie Głównej</h2>
    }
    else
    {
        <h2 class="text-center">Witamy na Stronie Głównej</h2>
    }
    <h4 class="text-center">Kategorie, które mogą Cię zainteresować:</h4>
    <div style="width:100%;display:flex;justify-content:center;">
        <div class="d-grid-4">
            @foreach (var item in Model)
            {
                @Html.ActionLink(item.nazwa, "Search", "Advertisement", new { kategoria = item.nazwa }, new { @class = "home-category" })
            }
        </div>
    </div>

    <div class="mt-5 d-flex flex-column align-items-center justify-content-center">
        <h4>Nowe Ogłoszenia:</h4>
        <div class="index searchList">
            @foreach (Ogloszenie o in ViewBag.ads)
            {
                <a href="@Url.Action("Details", "Advertisement", new { id = o.id })">
                    <div class="searchItem d-flex align-items-center">
                        @{
                            string imgString = "data:image;base64," + Convert.ToBase64String(o.zdjecie);
                        }
                        <img class="picture" src="@imgString" />
                        <div class="d-flex flex-column justify-content-start w-100 mr-3">
                            <h4 style="width: fit-content; text-align: start;">@o.nazwa</h4>
                            <div class="d-flex justify-content-between w-100">
                                @if (o.cena == 0)
                                {<p>Za darmo</p>}
                                else
                                { <p><span>@o.cena</span>zł</p>}
                                <p>@o.dodano.ToShortDateString()</p>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        </div>
