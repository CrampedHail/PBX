@model PBX.Models.Zgloszenie

@{
    ViewBag.Title = "Create";
}

<h2>Nowe zgłoszenie</h2>
<h4>naruszenia polityki serwisu PBX</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.zglaszajacy_id)
        @Html.HiddenFor(model => model.zgloszony_id)
        @Html.HiddenFor(model => model.ogloszenie_id)

        <div class="form-group d-flex justify-content-center">
            @Html.TextAreaFor(model => model.tresc, new { @class = "form-control", style = "min-height: 35px; max-height: 100px; resize: none;", @placeholder = "Wpisz tutaj treść zgłoszenia..." })
        </div>

        <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Zgłoś" class="btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Wróć do ogłoszenia", "Details", "Advertisement", new { id = Model.ogloszenie_id }, "")
</div>
