@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Zmiana hasła";
}

<h2>Zmiana hasła</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Uzytkownik</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.imie)
    @Html.HiddenFor(model => model.email)
    @Html.HiddenFor(model => model.nr_tel)
    @Html.HiddenFor(model => model.haslo)
    @Html.HiddenFor(model => model.dolaczono)

    <div class="form-group">
        <label class="control-label col-md-2">Stare hasło</label>
        <div class="col-md-10">
            <input type="password" class="form-control" name="old_password" id="old_password" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Powtórz nowe hasło</label>
        <div class="col-md-10">
            <input type="password" class="form-control" name="new_password" id="new_password" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Powtórz nowe hasło</label>
        <div class="col-md-10">
            <input type="password" class="form-control" name="confirm_password" id="confirm_password" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zmień hasło" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Anuluj", "Index", "Home")
</div>
