@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Zmiana hasła";
}

<h2>Zmiana hasła</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.imie)
    @Html.HiddenFor(model => model.email)
    @Html.HiddenFor(model => model.nr_tel)
    @Html.HiddenFor(model => model.haslo)
    @Html.HiddenFor(model => model.dolaczono)

    <div class="form-group d-flex justify-content-center flex-column align-items-center">
            <input type="password" class="form-control" name="old_password" id="old_password" placeholder="Stare Hasło" />
    </div>

    <div class="form-group d-flex justify-content-center flex-column align-items-center">
            <input type="password" class="form-control" name="new_password" id="new_password" placeholder="Nowe Hasło" />
    </div>

    <div class="form-group d-flex justify-content-center flex-column align-items-center">
            <input type="password" class="form-control" name="confirm_password" id="confirm_password" placeholder="Powtórz Hasło" />
    </div>

    <div class="form-group d-flex justify-content-center flex-column align-items-center">
            <input type="submit" value="Zmień hasło" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Anuluj", "Index", "Home")
</div>
