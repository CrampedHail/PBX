@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Resetowanie hasła";
}

<h2>Resetowanie hasła</h2>
<h4>Nowe hasło zostanie wysłane na podany adres email.</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4 class="text-danger">@ViewBag.Error</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex justify-content-center">
            @Html.EditorFor(model => model.imie, new { htmlAttributes = new { @class = "form-control", @name = "imie", @placeholder = "Imię" } })
            @Html.ValidationMessageFor(model => model.imie, "", new { @class = "text-danger" })
    </div>

    <div class="form-group d-flex justify-content-center">
            @Html.EditorFor(model => model.nr_tel, new { htmlAttributes = new { @class = "form-control", @name = "nr_tel", @placeholder = "Numer Telefonu" } })
            @Html.ValidationMessageFor(model => model.nr_tel, "", new { @class = "text-danger" })
    </div>

    <div class="form-group d-flex justify-content-center">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @name = "email", @placeholder = "Email" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group d-flex justify-content-center">
        <input type="submit" value="Resetuj hasło" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót", "Login")
</div>
