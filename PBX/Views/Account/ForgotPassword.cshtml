@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Resetowanie hasła";
}

<h2>Resetowanie hasła</h2>
<h4>Nowe hasło zostanie wysłane na podany adres email.</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4 class="text-danger">@ViewBag.Error</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.imie, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.imie, new { htmlAttributes = new { @class = "form-control", @name = "imie" } })
            @Html.ValidationMessageFor(model => model.imie, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.nr_tel, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.nr_tel, new { htmlAttributes = new { @class = "form-control", @name = "nr_tel" } })
            @Html.ValidationMessageFor(model => model.nr_tel, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @name = "email" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Resetuj hasło" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Strona Główna", "Index", "Home")
</div>
