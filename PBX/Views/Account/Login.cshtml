@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Zaloguj się";
}

<h2>Zaloguj się</h2>

<h4 class="text-danger">@ViewBag.Error</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-5">
            <input type="text" class="form-control" id="email" name="email" />
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(model => model.haslo, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-5">
            @Html.EditorFor(model => model.haslo, new { htmlAttributes = new { @class = "form-control", @name = "password", type = "password" } })
            @Html.ValidationMessageFor(model => model.haslo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-5"></div>
            <input type="submit" value="Zaloguj" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group row d-flex justify-content-center">
        <div>
            @Html.ActionLink("Nie mam jeszcze konta...", "Create")
            @Html.ActionLink("Nie pamiętam hasła...", "ForgotPassword")
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót", "Index", "Home")
</div>
