@model PBX.Models.Uzytkownik

@{
    ViewBag.Title = "Zaloguj się";
}

<h2>Zaloguj się</h2>

<h4 class="text-danger">@ViewBag.Error</h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex justify-content-center flex-column align-items-center">
        <input type="text" class="form-control" id="email" name="email" placeholder="Email"/>
        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group d-flex flex-column justify-content-center align-items-center">
        @Html.EditorFor(model => model.haslo, new { htmlAttributes = new { @class = "form-control", @name = "password", type = "password", @placeholder="Hasło" } })
        @Html.ValidationMessageFor(model => model.haslo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class=" d-flex justify-content-center">
            <input type="submit" value="Zaloguj" class="btn btn-default" />
        </div>
    </div>

    <div class="form-group row d-flex" style="justify-content:space-evenly">
            @Html.ActionLink("Nie mam jeszcze konta...", "Create")
            @Html.ActionLink("Nie pamiętam hasła...", "ForgotPassword")
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót", "Index", "Home")
</div>
