@using PBX.Models
@model PBX.Models.Kategoria

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Kategoria</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group d-flex justify-content-center">
        @Html.EditorFor(model => model.nazwa, new { htmlAttributes = new { @class = "form-control", @placeholder="Nazwa Kategorii" } })
        @Html.ValidationMessageFor(model => model.nazwa, "", new { @class = "text-danger" })
    </div>

    <div class="form-group d-flex justify-content-center">
        <label for="nadkategoria">Wybierz nadkategorię:</label>
        <select>
            <option selected> - </option>
            @foreach (var kat in ViewBag.categories as List<Kategoria>)
            {
                <option value=@kat.nazwa></option>
            }
        </select>
            @Html.DropDownList("nadkategoria_id", ViewBag.categories as SelectList, htmlAttributes: new { @class = "form-control", @id = "nadkategoria" })
            @Html.ValidationMessageFor(model => model.nadkategoria_id, "", new { @class = "text-danger" })
</div>

    <div class="form-group d-flex justify-content-center">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Powrót do listy", "Index")
</div>
